{
  "manifest_version": 3,
  "name": "Grabador de Audio y Transcriptor",
  "version": "1.0",
  "description": "Graba audio del micrófono y lo envía para transcripción",
  "permissions": [
        "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>",
       "http://*/",
    "https://*/"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}